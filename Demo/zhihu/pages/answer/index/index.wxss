page {
  position: relative;
}

.question-container {
  position: relative;
  transition: height 0.1s;
  overflow: scroll;
  padding: 0 0 80rpx 0;
  box-sizing: border-box;
  height: 100vh;
}

.input-content-container {
  padding: 10rpx;
  margin: 0 10rpx 0;
  box-sizing: content-box;
}

.input-content-container .input-content {
  width: 100%;
  color: #333;
  overflow: auto;
  font-size: 30rpx;
  height: calc(100vh - 150rpx);
}

.image-container {
  display: flex;
  padding: 0 10rp;
  flex-wrap: wrap;
  position: absolute;
  width: 100%;
  bottom: 80rpx;
  background-color: #fff;
  z-index: 10;
}

.image-container .image-item {
  width: 140rpx;
  height: 140rpx;
  position: relative;
  margin: 0 20rpx 20rpx;
}

.image-container .image-item .delete-image {
  position: absolute;
  width: 50rpx;
  height: 50rpx;
  top: -25rpx;
  right: -25rpx;
}

.image-container .image-item .tmp-image {
  width: 140rpx;
  height: 140rpx;
}

.bottom-container {
  position: absolute;
  bottom: 0;
  width: 100%;
  padding: 10rpx 0 10rpx 25rpx;
  height: 80rpx;
  box-sizing: border-box;
  background-color: #fff;
  z-index: 10;
}

.bottom-container::before {
  position: absolute;
  width: 100%;
  height: 1rpx;
  top: -10rpx;
  left: 0;
  content: ' ';
  background-color: #ccc;
  transform: scaleY(0.5);
}

.bottom-container .next-step {
  border-width: 1rpx;
  border-style: solid;
  border: 1px solid #0c8fff;
  position: absolute;
  right: 20rpx;
  bottom: 18rpx;
  border-radius: 10rpx;
  color: #0c8fff;
  background: #fff;
  width: 138rpx;
  height: 64rpx;
  font-size: 30rpx;
  font-weight: 400;
}

.bottom-container .enabled {
  border-color: #0c8fff;
  color: #0c8fff;
}

.bottom-container .disabled {
  border-color: #ccc;
  color: #ccc;
}

.bottom-container .media-item {
  width: 50rpx;
  height: 48rpx;
}

.bottom-container .media-video {
  margin-left: 50rpx;
}

.hide {
  display: none;
}
