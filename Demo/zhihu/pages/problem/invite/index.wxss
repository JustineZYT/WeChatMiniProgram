.top-wrapper {
  padding: 25rpx 30rpx 0;
}

.top-wrapper .search {
  display: flex;
  align-items: center;
  height: 88rpx;
  background: #fff;
  border-radius: 11rpx;
  padding: 0 26rpx;
}

.top-wrapper .search image:first-child {
  width: 29rpx;
  height: 28rpx;
  margin-right: 22rpx;
}

.top-wrapper .search image:last-child {
  width: 36rpx;
  height: 36rpx;
  margin-left: 22rpx;
}

.top-wrapper .search input {
  width: 535rpx;
}

.tip {
  font-size: 32rpx;
  font-weight: 400;
  color: #bbb;
}

.content-wrapper {
  margin-top: 20rpx;
}

.content-wrapper .self-follow {
  padding: 10rpx 30rpx 30rpx;
  font-size: 30rpx;
  font-weight: 400;
  color: #999;
}
