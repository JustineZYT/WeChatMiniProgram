.top-wrapper {
  padding: 30rpx;
}

.top-wrapper .classify-title {
  font-size: 30rpx;
  font-weight: 400;
  color: #999;
  margin-bottom: 30rpx;
}

.top-wrapper .classify-box {
  display: flex;
  flex-wrap: wrap;
}

.top-wrapper .classify-box .classify-item {
  box-sizing: border-box;
  min-width: 199rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  margin-right: 20rpx;
  margin-bottom: 20rpx;
  padding: 0 40rpx;
  background: #fff;
  font-size: 30rpx;
  font-weight: 400;
  color: #666;
}

.active {
  border: 2rpx solid #0c8fff !important;
  color: #0c8fff !important;
}

.action-wrapper {
  height: 85rpx;
  background: #fff;
  padding: 0 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 40rpx;
}

.action-wrapper .tip {
  display: flex;
  align-items: center;
}

.action-wrapper .tip text:first-child {
  font-size: 30rpx;
  font-weight: 400;
  color: #333;
  margin-right: 18rpx;
}

.action-wrapper .tip text:last-child {
  display: inline-block;
  width: 78rpx;
  height: 37rpx;
  background: rgba(248, 233, 204, 1);
  border-radius: 8rpx;
  font-size: 20rpx;
  font-weight: 400;
  color: #a27724;
  text-align: center;
  line-height: 37rpx;
}

.action-wrapper .action {
  display: flex;
  align-items: center;
}

.submitBtn {
  height: 85rpx;
  margin: 45rpx auto 0;
  background: linear-gradient(180deg, rgba(74, 175, 255, 1), rgba(3, 143, 255, 1));
  border-radius: 43rpx;
  font-size: 32rpx;
  font-weight: 400;
  color: #fff;
  line-height: 85rpx;
  width: 430rpx;
}

.submitBtn::after {
  border: none;
}
