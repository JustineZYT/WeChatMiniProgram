.main-wrapper {
  position: relative;
  padding-bottom: 95rpx;
}

.top-wrapper {
  background: #fff;
  padding: 30rpx;
}

.top-wrapper .classify-container text {
  display: inline-block;
  height: 54rpx;
  line-height: 54rpx;
  padding: 0 25rpx;
  background: #e7f4ff;
  margin-right: 20rpx;
  font-size: 27rpx;
  color: #7cabd3;
  font-weight: 400;
  border-radius: 8rpx;
  margin-bottom: 30rpx;
}

.top-wrapper .detail-container .title {
  font-size: 34rpx;
  font-weight: 500;
  color: #000;
  line-height: 1.5em;
  margin-bottom: 15rpx;
}

.top-wrapper .detail-container .desc {
  font-size: 27rpx;
  line-height: 1.5em;
  color: #888;
  font-weight: 400;
}

.top-wrapper .detail-container .action {
  margin-top: 20rpx;
  display: flex;
  justify-content: flex-end;
  align-items: center;
  font-size: 27rpx;
  color: #0c8fff;
  font-weight: 400;
}

.top-wrapper .detail-container .action :first-child {
  margin-right: 10rpx;
}

.top-wrapper .detail-container .action :last-child {
  transform: rotate(-180deg);
  width: 16rpx;
  height: 8rpx;
}

.top-wrapper .detail-container .more-desc {
  margin: 20rpx 0;
  padding: 30rpx;
  background: #f1f6f9;
  border-radius: 8rpx;
}

.top-wrapper .detail-container .info {
  font-size: 24rpx;
  font-weight: 400;
  color: #aaa;
  line-height: 1.5em;
}

.top-wrapper .detail-container .exist-box {
  background: #fff9df;
  margin-top: 20rpx;
  overflow: hidden;
  width: 448rpx;
  height: 65rpx;
  margin: 20rpx auto 0;
  font-size: 24rpx;
  font-weight: 400;
  line-height: 65rpx;
  text-align: center;
  color: #cfa165;
}

.action-wrapper {
  background: #fff;
  display: flex;
  align-items: center;
  height: 92rpx;
  font-size: 30rpx;
  color: #0c8fff;
  font-weight: 400;
  border-top: 2rpx solid #f1f6f9;
}

.action-wrapper text {
  display: flex;
  flex: 1;
  justify-content: center;
  align-items: center;
  height: 30rpx;
  border-right: 2rpx solid #e5e5e5;
}

.action-wrapper :last-child {
  border: none;
}

.follow-box {
  margin: 0 25rpx;
}

.follow-box .follow {
  display: inline-block;
  font-size: 30rpx;
  font-weight: 400;
  color: #fff;
  background: #0c8fff;
  width: 200rpx;
  height: 67rpx !important;
  line-height: 67rpx !important;
  border-radius: 8rpx;
  text-align: center;
}

.mtitle {
  font-size: 30rpx !important;
  margin-bottom: 5rpx !important;
}

.arrow-open {
  transform: rotate(0deg) !important;
}

.answer-wrapper {
  margin-top: 20rpx;
}

.noanswer-wrapper {
  height: 300rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  margin-top: 150rpx;
  position: relative;
}

.noanswer-wrapper image {
  width: 58rpx;
  height: 72rpx;
  margin-bottom: 33rpx;
}

.noanswer-wrapper text {
  font-size: 27rpx;
  line-height: 42rpx;
  font-weight: 400;
  color: #bbb;
}

.noanswer-wrapper .invite {
  color: #0c8fff;
}

.share-wrapper {
  background: #fff;
  width: 100%;
  height: 92rpx;
  position: fixed;
  bottom: 0;
  left: 0;
  border-top: 2rpx solid #e5e5e5;
}

.share-wrapper .share-container {
  height: 100%;
  display: flex;
  align-items: center;
}

.share-wrapper .share-container .share-item {
  flex: 1;
  display: flex;
  justify-content: center;
  font-size: 30rpx;
  font-weight: 400;
  color: #333;
  line-height: 30rpx;
}

.share-wrapper .share-container .share-item .img-wrap image {
  width: 30rpx;
  height: 30rpx;
  margin-right: 20rpx;
}

.border {
  border-right: 2rpx solid #e5e5e5;
}

.attention {
  color: #999 !important;
}

.shareBtn {
  background: #fff;
  padding: 0;
  margin: 0;
  display: flex;
  align-items: center;
  font-size: 30rpx;
  font-weight: 400;
  color: #333;
  line-height: 30rpx;
}

.hide {
  display: none !important;
}

.popup, .popup-bg {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 1000;
  display: flex;
  align-items: center;
  justify-content: center;
}

.popup-bg {
  background-color: rgba(0, 0, 0, 0.65);
}

.popup-content {
  border-radius: 8rpx;
  width: 730rpx;
  padding: 20rpx 20rpx 40rpx;
  text-align: center;
  z-index: 1001;
  background-color: #fff;
  box-sizing: border-box;
}

.popup-content .canvas {
  width: 300px;
  height: 300px;
  margin: 0 auto;
}

.popup-content .tip {
  color: #aaa;
  font-size: 24rpx;
}

.popup-content .save-btn {
  color: #fff;
  font-size: 32rpx;
  width: 398rpx;
  height: 85rpx;
  line-height: 85rpx;
  background: linear-gradient(180deg, rgba(74, 175, 255, 1), rgba(3, 143, 255, 1));
  border-radius: 43px;
  margin: 20rpx auto 0;
}

.gohome-wrap {
  position: absolute;
  top: 50rpx;
  left: 0;
  width: 108rpx;
  height: 72rpx;
  background: rgba(255, 255, 255, 1);
  border: 1px solid rgba(221, 221, 221, 1);
  border-top-right-radius: 36rpx;
  border-bottom-right-radius: 36rpx;
}

.gohome-wrap .gohome-box {
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 30rpx;
  color: #0c8fff;
  font-weight: 400;
}
