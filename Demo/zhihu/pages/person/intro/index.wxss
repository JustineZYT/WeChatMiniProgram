.main-wrapper {
  background: #fff;
  padding: 30rpx;
  box-sizing: border-box;
  position: relative;
  min-height: 0;
}

.intro {
  border-bottom: 2rpx solid #49abff;
  padding-bottom: 30rpx;
}

.tip {
  font-size: 30rpx;
  font-weight: 400;
  color: #bbb;
}

.save {
  position: absolute;
  bottom: 30rpx;
  right: 30rpx;
  width: 138rpx;
  height: 64rpx;
  border: 2rpx solid rgba(12, 143, 255, 1);
  border-radius: 8rpx;
  background: #fff;
  margin: 0;
  padding: 0;
  font-size: 30rpx;
  font-weight: 400;
  color: #0c8fff;
  line-height: 64rpx;
}
