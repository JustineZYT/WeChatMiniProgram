.follow-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 80rpx;
  background: #fff;
  padding: 0 30rpx;
  margin-bottom: 2rpx;
}

.follow-item .person-info {
  display: flex;
  align-items: center;
}

.follow-item .person-info .avatar image {
  width: 50rpx;
  height: 50rpx;
  border-radius: 50%;
  margin-right: 15rpx;
}

.follow-item .person-info text {
  font-size: 30rpx;
  font-weight: 400;
  color: #666;
}

.follow-item .icon {
  display: flex;
  justify-content: center;
  align-items: center;
  margin-left: 12rpx;
}

.follow-item .icon image {
  width: 24rpx;
  height: 24rpx;
}

.follow-item .action {
  font-size: 28rpx;
  font-weight: 400;
  color: #ccc;
}

.active {
  color: #0c8fff !important;
}
