/* pages/my-about/my-about.wxss */
@import '../../common/base.wxss';
.tel{
  padding:0rpx;
  display: flex;
  justify-content: center;
  width: 95%;
  margin: 0 auto;
  margin-top: 2.5%;
  position: relative;
  background: #ffffff;
}
.bg-img{
  height: 380rpx;
  width: 100%;
}
.tel-phone{
  display: flex;
  position: absolute;
  top: 0;
  background: rgba(245, 241, 241, 0.329);
  width: 100%;
  height: 100%;
}
.img160{
  width: 160rpx;
  height: 160rpx;
  border-radius: 100%;
}
.tel-name{
  font-size: 36rpx;
  color: #ffffff;
  margin-top: 10rpx;
  font-weight: 600
}
.tel-infor{
  display: flex;
  width: 95%;
  font-size: 32rpx;
  margin: 0 auto;
  margin: 2.5%;
  background: #ffffff;
}
.list-01{
  width: 100%;
  padding: 25rpx 25rpx;
  font-size: 32rpx;
  color: rgb(45, 45, 45);  
  border-bottom: 1rpx solid #e9d6d6;
}