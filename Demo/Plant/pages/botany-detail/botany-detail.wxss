/* pages/botany-detail/botany-detail.wxss */
@import "/common/base.wxss";

.adver{
  position: relative;
}
.img-ad{
  height: 315rpx;
  width: 100%;
}
.botany-name{
  width: 100%;
  background: rgba(255, 255, 255, 0.473);
  font-size: 40rpx;
  font-weight: bold;
  color: #ffffff;
  position: absolute;
  bottom: 0;
  display: flex;
  align-items: flex-start;
  align-content: flex-start;
  padding: 30rpx;
}
.introduce{
  background: #ffffff;
  margin: 25rpx;
  padding: 25rpx;
}
.introduce-title{
  font-size: 36rpx;
  font-weight: 600;
  color: #333333;
  height: 80rpx;
  line-height: 80rpx;
}
.english-name{
  font-size: 32rpx;
  color: #999999;
  height: 60rpx;
  line-height: 60rpx;
}
.introduce-content{
  font-size: 30rpx;
  line-height: 60rpx;
  color: #666666;
}


.oil-nav-01{
  background: #ffffff;
  margin: 25rpx;
  border-radius: 8rpx;
}
.oil-name{
  position: relative;
  height: 220rpx;
  width: 100%;
}
.oil-img{
  width: 100%;
  height: 220rpx;
  display: flex;
}
.oil-img-name{
  position: absolute;
  top: 0;
  padding-left: 35rpx;
  width: 100%;
  height: 100%;
  display: flex;
  font-size: 36rpx;
  font-weight: 600;
  background: rgba(145, 137, 137, 0.322);
  color: #ffffff;
  border-top-left-radius: 8rpx;
  align-items: flex-start;
  border-bottom-left-radius: 8rpx;
}
.h1-txt{
  font-size: 36rpx;
  font-weight: 600;
}
.h6-txt{
  font-size: 30rpx;
  font-weight: normal;
  margin-top: 10rpx;
}