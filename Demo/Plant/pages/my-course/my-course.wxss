/* pages/my-course/my-course.wxss */
@import "/common/base.wxss";

.header-01{
  background: #ffffff;
  font-size: 30rpx;
  color: #333333;
  padding: 15rpx 0rpx;
  margin-bottom: 25rpx;
}
.h1-txt{
  font-size: 32rpx;
  margin-bottom: 25rpx;
}
.next-01{
  flex: 1;
  text-align: center;
  line-height: 40rpx;
}
.next-01:nth-child(2){
  border-left: 1rpx solid #999999;
  border-right: 1rpx solid #999999;
}

.s1-txt{
  font-weight: 600;
  font-size: 38rpx;
  margin-right: 8rpx;
}

.list-01{
  margin: 25rpx 0rpx;
  padding: 25rpx;
  background: #ffffff;
  position: relative;  
}
.totur-img{
  width: 200rpx;
  height: 200rpx;
  border-radius: 8rpx;
}
.referral{
  margin-right: 25rpx;
  font-size: 30rpx;
  flex: 1;
  display: flex;
  align-items: flex-start;
  align-content: flex-start;
  justify-content: center;
}
.course-name{
  color: #222222;
  font-size: 32rpx;
  height: 60rpx;
  line-break: 60rpx;
}
.class-hours{
  color: #666666;
  height: 40rpx;
  line-break: 40rpx;
}
.referral-infor{
  height: 50rpx;
  align-items: center;
  display: flex;
  align-content: flex-start;
}