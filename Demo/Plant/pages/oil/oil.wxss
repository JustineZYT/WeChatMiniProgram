/* pages/oil/oil.wxss */
@import "/common/base.wxss";

.oil-nav-01{
  background: #ffffff;
  margin: 25rpx;
  border-radius: 8rpx;
}
.oil-name{
  position: relative;
  height: 220rpx;
  width: 100%;
}
.oil-img{
  width: 100%;
  height: 385rpx;
  display: flex;
}
.oil-img-name{
  position: absolute;
  top: 0;
  padding-left: 35rpx;
  width: 100%;
  height: 100%;
  display: flex;
  font-size: 36rpx;
  font-weight: 600;
  background: rgba(145, 137, 137, 0.322);
  color: #ffffff;
  border-top-left-radius: 8rpx;
  align-items: flex-start;
  border-bottom-left-radius: 8rpx;
}
.h1-txt{
  font-size: 36rpx;
  font-weight: 600;
}
.h6-txt{
  font-size: 30rpx;
  font-weight: normal;
  margin-top: 10rpx;
}
